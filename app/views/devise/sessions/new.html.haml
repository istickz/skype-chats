.container
  %h2= t('.sign_in', :default => "Sign in")
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .form-inputs
      = f.input :email, :required => false, :autofocus => true, label: false, placeholder: "E-mail"
      = f.input :password, :required => false, label: false,  placeholder:   t('.password', :default => "Password")
      = f.input :remember_me, label: t('.remember_me', :default => "Remember me"), :as => :boolean if devise_mapping.rememberable?
    .form-actions
      = f.button :submit, t('.sign_in', :default => "Sign in")
  %br/
  = render "devise/shared/links"
