<%= simple_form_for(@chat) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, placeholder: "Название", label: false%>
    <%= f.input  :url, placeholder: "Ссылка", label: false %>
    <%= f.input  :description, placeholder: "Описание чата", as: :text, label: false %>
    <%= f.association :category, prompt: "Выберите категорию", label: false %>
    <%= f.input :image, as: :file, label: "Прикрепить изображение"%>
    </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
